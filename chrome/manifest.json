{
	"manifest_version": 2,
	"name": "demo",
	"version": "1.0",
	"description": "hello world",
	"author": "litianji",
	"icons": {
		"32": "assets/icon_32.png",
		"128": "assets/icon_32.png"
	},
  "sockets":{
    "tcpServer": {
      "listen": "*"
    }
  },
  "app": {
    "background": {
      "scripts": ["wsc-chrome.js", "js/background.js"],
      "persistent": false
    }
  },
  "permissions": [
    "<all_urls>",
    "system.display",
    "system.network",
    "power",
    "webview",
    "alwaysOnTopWindows",
    "storage",
    "app.window.fullscreen",
    "app.window.fullscreen.overrideEsc",
    {"fileSystem": ["directory","retainEntries"]}
  ]
}